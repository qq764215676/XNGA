<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="姓名"
            android:textStyle="bold"
            android:textColor="#A9A9A9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tv_people_result_detial_ppl_name"
            android:text="徐建平"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>
    
    <View
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="性别"
            android:textStyle="bold"
            android:textColor="#A9A9A9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tv_people_result_detial_ppl_sex"
            android:text="男"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>
    
    <View
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="民族"
            android:textStyle="bold"
            android:textColor="#A9A9A9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tv_people_result_detial_ppl_nation"
            android:text="汉"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>
    
    <View
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="出生日期"
            android:textStyle="bold"
            android:textColor="#A9A9A9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tv_people_result_detial_ppl_birt"
            android:text="1970-06-06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>
    
    <View
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="地址"
            android:textStyle="bold"
            android:textColor="#A9A9A9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tv_people_result_detial_ppl_address"
            android:text="南宁市江南区福建路11号聚福小区A栋2单元1222号房"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>
    
    <View
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="身份证"
            android:textStyle="bold"
            android:textColor="#A9A9A9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tv_people_result_detail_ppl_id"
            android:text="450321197006062071"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>
    
    <View
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:text="备注"
            android:textStyle="bold"
            android:textColor="#A9A9A9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tv_people_result_detial_info"
            android:text="2013年8月28日早上9时许，徐振芳向我所报案称：其停放在阳朔县福利镇枫林金银山合作社消毒间旁边的三轮摩托车，与2013年8月28日凌晨2时30分发现被盗..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>
    
</LinearLayout>
</ScrollView>
