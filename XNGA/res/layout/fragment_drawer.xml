<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    android:orientation="vertical" >

    <com.gc.materialdesign.views.LayoutRipple
        android:id="@+id/lr_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:clickable="true"
        android:padding="25dp" >

        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/drawer_head_logo" />

        <TextView
            android:id="@+id/tv_login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="立即登陆"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </com.gc.materialdesign.views.LayoutRipple>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingLeft="20dp"
                android:text="账号"
                android:textColor="#6C6C6C"
                android:textSize="13sp" />
            
            <com.gc.materialdesign.views.LayoutRipple
                android:id="@+id/lr_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/tv_change_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_back_selector"
                    android:padding="12dp"
                    android:text="修改密码"
                    android:textColor="#272727"
                    android:textSize="17sp" />
            </com.gc.materialdesign.views.LayoutRipple>

            <!--  
            <TextView
                android:id="@+id/tv_change_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/action_back_selector"
                android:padding="12dp"
                android:text="修改密码"
                android:textColor="#272727"
                android:textSize="17sp"
                android:visibility="gone" />
            -->

            <com.gc.materialdesign.views.LayoutRipple
                android:id="@+id/lr_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_back_selector"
                    android:padding="12dp"
                    android:text="退出登录"
                    android:textColor="#272727"
                    android:textSize="17sp" />
            </com.gc.materialdesign.views.LayoutRipple>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="安全"
                android:textColor="#6C6C6C"
                android:textSize="13sp" />

            <com.gc.materialdesign.views.LayoutRipple
                android:id="@+id/lr_is_autologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/rl_is_autologin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_back_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="自动登录"
                        android:textColor="#272727"
                        android:textSize="17sp" />

                    <com.gc.materialdesign.views.Switch
                        android:id="@+id/cb_is_autologin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/bg_color"
                        materialdesign:checked="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:button="@drawable/set_checkbox_select"
                        android:paddingRight="25dp"
                        android:visibility="gone" />
                </RelativeLayout>
                
            </com.gc.materialdesign.views.LayoutRipple>
            
            <!-- 手势密码设置 -->
            <com.gc.materialdesign.views.LayoutRipple
                android:id="@+id/lr_gesture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <RelativeLayout
                    android:id="@+id/rl_gesture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_back_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="手势密码设置"
                        android:textColor="#272727"
                        android:textSize="17sp" />

                </RelativeLayout>
                
            </com.gc.materialdesign.views.LayoutRipple>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="其他"
                android:textColor="#6C6C6C"
                android:textSize="13sp" />

            <com.gc.materialdesign.views.LayoutRipple
                android:id="@+id/lr_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_back_selector"
                    android:padding="12dp"
                    android:text="检查更新"
                    android:textColor="#272727"
                    android:textSize="17sp" />
            </com.gc.materialdesign.views.LayoutRipple>

            <com.gc.materialdesign.views.LayoutRipple
                android:id="@+id/lr_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
               >

                <TextView
                    android:id="@+id/tv_clean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_back_selector"
                    android:padding="12dp"
                    android:text="清理缓存"
                    android:textColor="#272727"
                    android:textSize="17sp" />
            </com.gc.materialdesign.views.LayoutRipple>
        </LinearLayout>
    </ScrollView>

</LinearLayout>