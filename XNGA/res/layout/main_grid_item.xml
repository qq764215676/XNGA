<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gv_item_selector" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingTop="15dp" >

        <ImageView
            android:id="@+id/iv_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/menu_1"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/iv_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="5dp"
            android:ellipsize="middle"
            android:gravity="center_horizontal"
            android:lines="2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="sadas"
            android:textColor="#4f4f4f"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_tag_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:background="@drawable/tag_plus_selector"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_tag_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:background="@drawable/tag_sub_selector"
        android:visibility="gone" />

</FrameLayout>